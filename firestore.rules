rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAppAdmin() {
      // Check if the requesting user has an 'admin' role in their own user document.
      // This is safe because a user cannot change their own role based on the rules below.
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users Collection
    match /users/{userId} {
      // Any authenticated user can read any other user's profile for messaging purposes.
      allow read: if request.auth != null;

      // New users can create their profile.
      // They cannot assign themselves a role or approve themselves.
      allow create: if request.auth.uid == userId
                    && request.resource.data.isApproved == false
                    && !('role' in request.resource.data);

      // - Admins can update any field on any user document.
      // - A regular user can only update their own non-critical fields. They cannot change their role or approval status.
      allow update: if isAppAdmin() || (
        request.auth.uid == userId &&
        request.resource.data.role == resource.data.role &&
        request.resource.data.isApproved == resource.data.isApproved
      );
    }

    // Conversations
    match /conversations/{conversationId} {
      // Only participants of a conversation can access it.
      allow read, write: if request.auth.uid in resource.data.participantUids;
    }

    // Messages within a conversation
    match /conversations/{conversationId}/messages/{messageId} {
        // Only participants can read messages.
        allow read: if request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantUids;

        // A user can only create a message if they are a participant and the senderId is their own.
        allow create: if request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantUids
                      && request.resource.data.senderId == request.auth.uid;
    }

    // Merkez & Tasra Collections - Any authenticated user can read/write
    // This can be tightened later if needed (e.g., only specific roles can write).
    match /merkez-positions/{docId} {
      allow read, write: if request.auth != null;
    }
    match /merkez-personnel/{docId} {
      allow read, write: if request.auth != null;
    }
    match /tasra-positions/{docId} {
      allow read, write: if request.auth != null;
    }
    match /tasra-personnel/{docId} {
      allow read, write: if request.auth != null;
    }
  }
}
