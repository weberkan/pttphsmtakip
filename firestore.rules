
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // USER PROFILES
    match /users/{userId} {
      // Any authenticated user can read the user list for messaging.
      allow read: if request.auth.uid != null;
      
      // New users can create their own profile, but cannot self-approve or assign a role.
      allow create: if request.auth.uid == userId &&
                      request.resource.data.isApproved == false &&
                      !('role' in request.resource.data);

      // An admin can approve a user by updating the isApproved field.
      // A user cannot update their own document for now.
      allow update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' &&
                      'isApproved' in request.resource.data.diff(resource.data).affectedKeys();
    }
    
    // CONVERSATIONS
    match /conversations/{conversationId} {
      // You can only read or write a conversation doc if your UID is part of the doc ID itself.
      // This is a robust way to secure conversations based on the predictable ID format 'uid1_uid2'.
      allow read, write: if request.auth.uid in conversationId.split('_');
      
      // MESSAGES SUB-COLLECTION
      match /messages/{messageId} {
        // You can read/list messages only if you are part of the parent conversation.
        allow read: if request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantUids;
        
        // You can only create a message if you are the sender AND part of the parent conversation.
        allow create: if request.auth.uid == request.resource.data.senderId &&
                       request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantUids;
      }
    }

    // Default rules for MERKEZ collections
    match /merkez-positions/{docId} {
      allow read, write: if request.auth.uid != null;
    }
    match /merkez-personnel/{docId} {
      allow read, write: if request.auth.uid != null;
    }
    
    // Default rules for TASRA collections
    match /tasra-positions/{docId} {
      allow read, write: if request.auth.uid != null;
    }
    match /tasra-personnel/{docId} {
      allow read, write: if request.auth.uid != null;
    }
  }
}
