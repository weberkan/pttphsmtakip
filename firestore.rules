
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection rules
    match /users/{userId} {
      // Any authenticated user can read user profiles (for messaging list).
      allow read: if request.auth != null;

      // A user can create their own user document during signup, but cannot self-approve or assign a role.
      allow create: if request.auth != null && request.resource.data.isApproved == false && !('role' in request.resource.data);

      // A user can update their own profile (but not their role or approval status).
      // An admin can update any user's profile (including approval status).
      allow update: if request.auth != null && (
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin') ||
        (request.auth.uid == userId && !('role' in request.resource.data) && !('isApproved' in request.resource.data))
      );

      // Only admins can delete users.
      allow delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Conversations & Messages rules
    match /conversations/{conversationId} {
      // A user can only read, write, or create a conversation if they are a participant.
      allow read, write, create: if request.auth != null && request.auth.uid in resource.data.participantUids;

      match /messages/{messageId} {
        // A user can only read or create messages in conversations they are a part of.
        allow read, create: if request.auth != null && get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantUids.hasAny([request.auth.uid]);
      }
    }

    // Data collections (Merkez & Tasra)
    // Any authenticated user can read or write data in these collections.
    match /merkez-positions/{doc=**} {
      allow read, write: if request.auth != null;
    }
    match /merkez-personnel/{doc=**} {
      allow read, write: if request.auth != null;
    }
    match /tasra-positions/{doc=**} {
      allow read, write: if request.auth != null;
    }
    match /tasra-personnel/{doc=**} {
      allow read, write: if request.auth != null;
    }
  }
}
